<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCutiAdmin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardElevation="0dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCutiAdmin"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/user"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:id="@+id/tvNamaCutiAdmin"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Nama Pegawai"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginStart="86dp"/>

        <TextView
            android:id="@+id/tvJenisCutiAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Cuti"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="86dp"/>

        <TextView
            android:id="@+id/tvTanggalCutiAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy-MM-dd"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="86dp"
            android:background="#9C9999"
            android:layout_gravity="bottom"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconAdmin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/information" />
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardCutiAdmin"/>

</androidx.constraintlayout.widget.ConstraintLayout>