<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSisa"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSisa"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/user"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tvNamaSisa"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_height="wrap_content"
            android:layout_width="175dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="Nama Pegawai"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSisaPegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="96dp"
            android:layout_marginBottom="10dp"
            android:text="Sisa Cuti" />

        <TextView
            android:id="@+id/tvTerpakaiKuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="56dp"
            android:text="Terpakai" />

        <TextView
            android:id="@+id/tvTanggalSisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="56dp"
            android:text="yyyy-MM-dd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="96dp"
            android:background="#9C9999" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnEditKuota"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:padding="8dp"
            app:civ_border_color="@color/purple_700"
            app:civ_border_width="1dp"
            android:src="@drawable/edit_button"/>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardSisa"/>

</androidx.constraintlayout.widget.ConstraintLayout>