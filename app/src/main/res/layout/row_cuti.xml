<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCuti"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPaddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <TextView
            android:id="@+id/adpId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="100"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/adpTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="26dp"
            android:text="2022/02/11"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/adpJenisCuti"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:text="Jenis Cuti"
            android:lines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/adpLamaCuti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="26dp"
            android:text="11 "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_marginTop="26dp"
            android:text=" Hari"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/adpStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:text="Diterima"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Space
        app:layout_constraintTop_toBottomOf="@+id/cardCuti"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>