<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:background="#00FFFFFF">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:id="@+id/tvDetailIdCutiAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="8dp"
                        android:text="00"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:id="@+id/tvDetailStatusCutiAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        android:text="Diterima"/>
                </androidx.cardview.widget.CardView>

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal">

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Nama Pegawai"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiNama"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="NIP Pegawai"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiNip"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Jabatan"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiJabatan"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Golongan"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiGolongan"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Unit Kerja"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiUnitKerja"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Masa Kerja"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiMasaKerja"
                            android:text="textView"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Jenis Cuti"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiJenis"
                            android:text="Cuti Diluar Tanggungan Negara"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Tanggal Cuti"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiTglCuti"
                            android:text="textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Selesai Cuti"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiSelesaiCuti"
                            android:text="textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <TextView
                            android:text="Lama Cuti"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_view_border" />

                        <TextView
                            android:id="@+id/tvDetailCutiLamaCuti"
                            android:text="textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:maxLines="1"
                            android:background="@drawable/text_view_border"/>

                    </TableRow>
                </TableLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alasan Cuti : "
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/tvDetailCutiAlasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="textView"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Selama Cuti : "
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="8dp"/>

                    <TextView
                        android:id="@+id/tvDetailCutiAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="textView"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"/>
                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/btnLihatFotoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Klik disini untuk melihat Bukti Foto .."
                    android:textColor="#673AB7"
                    android:textStyle="italic"
                    android:layout_gravity="start"
                    android:layout_marginStart="12dp"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/alef"
                    android:text="*Catatan"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvCatatanCutiAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/alef"
                    android:text="Catatan" />

                <Space
                    android:id="@+id/spaceAdminTengah"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:layout_marginHorizontal="8dp"
                    app:cardElevation="0dp"
                    android:background="#00FFFFFF">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvTglTtd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kediri,"/>

                        <ImageView
                            android:id="@+id/imgTtd1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvNamaTtd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:ems="11"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:text="Nama Lengkap Pemimpin 1"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvNipTtd1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="0000000000000000000000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvTglTtd2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Kediri,                         "/>

                        <ImageView
                            android:id="@+id/imgTtd2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="end"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvNamaTtd2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textAlignment="textEnd"
                            android:ems="11"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:text="Nama Lengkap Pemimpin 2"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/tvNipTtd2"
                            android:layout_width="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="0000000000000000000000"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/btnHapusCutiAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Hapus"
                    android:padding="8dp"
                    android:textColor="#FB0000"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="0dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#00FFFFFF">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnEditCuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7291DF"
                        android:src="@drawable/edit"
                        app:elevation="0dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnNextCuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#7291DF"
                        android:src="@drawable/paper_plane"
                        app:elevation="0dp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>